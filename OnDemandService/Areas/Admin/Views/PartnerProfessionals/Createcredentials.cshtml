@model OnDemandService.Models.User
@{
    ViewBag.Title = "Createcredentials";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>Create credentials</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">



        @Html.HiddenFor(m => m.UserId)
        <div class="form-group">
            @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", name = "Username" } })

            </div>
        </div>



        <div class="form-group">
            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", name = "Password" } })

            </div>
        </div>










        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


